<!DOCTYPE html>
<html lang="th">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Media Manager - Queue Display</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: #f5f5f5;
            font-family: 'Sarabun', Arial, sans-serif;
        }

        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px 0;
            margin-bottom: 30px;
        }

        .media-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
        }

        .media-card:hover {
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
            transform: translateY(-2px);
        }

        .media-preview {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .media-type-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 500;
        }

        .btn-primary-custom:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

        .upload-zone {
            border: 3px dashed #667eea;
            border-radius: 12px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            background: white;
        }

        .upload-zone:hover {
            border-color: #764ba2;
            background: #f8f9ff;
        }

        .upload-zone i {
            font-size: 48px;
            color: #667eea;
            margin-bottom: 15px;
        }
    </style>
</head>

<body>
    <div class="page-header">
        <div class="container">
            <h1><i class="fas fa-photo-video"></i> จัดการสื่อ Queue Display</h1>
            <p class="mb-0">อัปโหลดและจัดการภาพสไลด์/วีดีโอที่แสดงในหน้า Queue Display</p>
        </div>
    </div>

    <div class="container">
        <!-- Upload Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fas fa-cloud-upload-alt"></i> อัปโหลดสื่อใหม่</h5>
                        <ul class="nav nav-tabs mb-3" id="uploadTabs" role="tablist">
                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#upload-file">
                                    <i class="fas fa-file-upload"></i> อัปโหลดไฟล์
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#youtube-url">
                                    <i class="fab fa-youtube"></i> YouTube URL
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <!-- File Upload Tab -->
                            <div class="tab-pane fade show active" id="upload-file">
                                <form id="uploadFileForm" enctype="multipart/form-data">
                                    <div class="upload-zone" onclick="document.getElementById('fileInput').click()">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <h5>คลิกเพื่อเลือกไฟล์</h5>
                                        <p class="text-muted mb-0">รองรับ: JPG, PNG, GIF, MP4, WebM (ขนาดไม่เกิน 50MB)
                                        </p>
                                        <input type="file" id="fileInput" name="file" accept="image/*,video/*"
                                            style="display:none" onchange="handleFileSelect(event)">
                                    </div>
                                    <div id="filePreview" class="mt-3" style="display:none">
                                        <img id="previewImage" class="media-preview" style="display:none">
                                        <video id="previewVideo" class="media-preview" controls
                                            style="display:none"></video>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-md-6">
                                            <label class="form-label">ชื่อเรื่อง</label>
                                            <input type="text" class="form-control" name="title" required>
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label">ระยะเวลาแสดง (วินาที)</label>
                                            <input type="number" class="form-control" name="duration" value="10" min="5"
                                                max="60">
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label">ลำดับการแสดง</label>
                                            <input type="number" class="form-control" name="display_order" value="0">
                                        </div>
                                        <div class="col-12 mt-2">
                                            <label class="form-label">คำอธิบาย</label>
                                            <textarea class="form-control" name="description" rows="2"></textarea>
                                        </div>
                                        <div class="col-12 mt-3">
                                            <button type="submit" class="btn btn-primary-custom">
                                                <i class="fas fa-upload"></i> อัปโหลด
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <!-- YouTube URL Tab -->
                            <div class="tab-pane fade" id="youtube-url">
                                <form id="uploadYoutubeForm">
                                    <div class="row">
                                        <div class="col-12">
                                            <label class="form-label">YouTube URL</label>
                                            <input type="url" class="form-control" name="youtube_url"
                                                placeholder="https://www.youtube.com/watch?v=..." required>
                                        </div>
                                        <div class="col-md-6 mt-3">
                                            <label class="form-label">ชื่อเรื่อง</label>
                                            <input type="text" class="form-control" name="title" required>
                                        </div>
                                        <div class="col-md-3 mt-3">
                                            <label class="form-label">ระยะเวลาแสดง (วินาที)</label>
                                            <input type="number" class="form-control" name="duration" value="30"
                                                min="10">
                                        </div>
                                        <div class="col-md-3 mt-3">
                                            <label class="form-label">ลำดับการแสดง</label>
                                            <input type="number" class="form-control" name="display_order" value="0">
                                        </div>
                                        <div class="col-12 mt-2">
                                            <label class="form-label">คำอธิบาย</label>
                                            <textarea class="form-control" name="description" rows="2"></textarea>
                                        </div>
                                        <div class="col-12 mt-3">
                                            <button type="submit" class="btn btn-primary-custom">
                                                <i class="fab fa-youtube"></i> เพิ่ม YouTube
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Media List -->
        <div class="row">
            <div class="col-12">
                <h4 class="mb-3"><i class="fas fa-list"></i> สื่อทั้งหมด</h4>
                <div id="mediaList" class="row">
                    <!-- Media cards will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">แก้ไขสื่อ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm">
                    <div class="modal-body">
                        <input type="hidden" id="edit_media_id">
                        <div class="mb-3">
                            <label class="form-label">ชื่อเรื่อง</label>
                            <input type="text" class="form-control" id="edit_title" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">คำอธิบาย</label>
                            <textarea class="form-control" id="edit_description" rows="2"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label class="form-label">ระยะเวลาแสดง (วินาที)</label>
                                <input type="number" class="form-control" id="edit_duration" min="5">
                            </div>
                            <div class="col-6">
                                <label class="form-label">ลำดับการแสดง</label>
                                <input type="number" class="form-control" id="edit_display_order">
                            </div>
                        </div>
                        <div class="form-check mt-3">
                            <input type="checkbox" class="form-check-input" id="edit_is_active">
                            <label class="form-check-label" for="edit_is_active">เปิดใช้งาน</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                        <button type="submit" class="btn btn-primary-custom">บันทึก</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Preview selected file
        function handleFileSelect(event) {
            const file = event.target.files[0];
            if (!file) return;

            const preview = document.getElementById('filePreview');
            const previewImage = document.getElementById('previewImage');
            const previewVideo = document.getElementById('previewVideo');

            preview.style.display = 'block';

            if (file.type.startsWith('image/')) {
                previewImage.style.display = 'block';
                previewVideo.style.display = 'none';
                previewImage.src = URL.createObjectURL(file);
            } else if (file.type.startsWith('video/')) {
                previewVideo.style.display = 'block';
                previewImage.style.display = 'none';
                previewVideo.src = URL.createObjectURL(file);
            }
        }

        // Upload file
        document.getElementById('uploadFileForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);

            try {
                const response = await fetch('/queue/api/media', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();

                if (result.success) {
                    alert('อัปโหลดสำเร็จ!');
                    e.target.reset();
                    document.getElementById('filePreview').style.display = 'none';
                    loadMediaList();
                } else {
                    alert('เกิดข้อผิดพลาด: ' + result.error);
                }
            } catch (error) {
                alert('เกิดข้อผิดพลาด: ' + error);
            }
        });

        // Upload YouTube
        document.getElementById('uploadYoutubeForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);

            try {
                const response = await fetch('/queue/api/media', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();

                if (result.success) {
                    alert('เพิ่ม YouTube สำเร็จ!');
                    e.target.reset();
                    loadMediaList();
                } else {
                    alert('เกิดข้อผิดพลาด: ' + result.error);
                }
            } catch (error) {
                alert('เกิดข้อผิดพลาด: ' + error);
            }
        });

        // Load media list
        async function loadMediaList() {
            try {
                const response = await fetch('/queue/api/media/all');
                const data = await response.json();

                if (data.success) {
                    const container = document.getElementById('mediaList');
                    container.innerHTML = '';

                    data.media.forEach(media => {
                        const col = document.createElement('div');
                        col.className = 'col-md-4 col-lg-3';

                        let previewHtml = '';
                        if (media.media_type === 'image') {
                            previewHtml = `<img src="${media.file_path}" class="media-preview" alt="${media.title}">`;
                        } else if (media.media_type === 'video') {
                            previewHtml = `<video src="${media.file_path}" class="media-preview" controls></video>`;
                        } else if (media.media_type === 'youtube') {
                            const videoId = extractYouTubeID(media.youtube_url);
                            previewHtml = `<img src="https://img.youtube.com/vi/${videoId}/mqdefault.jpg" class="media-preview">`;
                        }

                        col.innerHTML = `
                            <div class="media-card position-relative">
                                <span class="media-type-badge badge ${media.media_type === 'youtube' ? 'bg-danger' : media.media_type === 'video' ? 'bg-info' : 'bg-success'}">
                                    <i class="fas ${media.media_type === 'youtube' ? 'fa-youtube' : media.media_type === 'video' ? 'fa-video' : 'fa-image'}"></i>
                                    ${media.media_type.toUpperCase()}
                                </span>
                                ${previewHtml}
                                <h6 class="mb-2">${media.title}</h6>
                                <p class="text-muted small mb-2">${media.description || '-'}</p>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small><i class="far fa-clock"></i> ${media.duration}s</small>
                                    <small><i class="fas fa-sort"></i> #${media.display_order}</small>
                                </div>
                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" ${media.is_active ? 'checked' : ''} 
                                           onchange="toggleActive(${media.id}, this.checked)">
                                    <label class="form-check-label small">เปิดใช้งาน</label>
                                </div>
                                <div class="btn-group w-100">
                                    <button class="btn btn-sm btn-outline-primary" onclick="editMedia(${media.id})">
                                        <i class="fas fa-edit"></i> แก้ไข
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteMedia(${media.id})">
                                        <i class="fas fa-trash"></i> ลบ
                                    </button>
                                </div>
                            </div>
                        `;
                        container.appendChild(col);
                    });
                }
            } catch (error) {
                console.error('Error loading media:', error);
            }
        }

        // Extract YouTube video ID
        function extractYouTubeID(url) {
            const match = url.match(/(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^"&?\/\s]{11})/);
            return match ? match[1] : '';
        }

        // Toggle active status
        async function toggleActive(mediaId, isActive) {
            try {
                const response = await fetch(`/queue/api/media/${mediaId}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ is_active: isActive })
                });
                const result = await response.json();
                if (!result.success) {
                    alert('เกิดข้อผิดพลาด: ' + result.error);
                    loadMediaList();
                }
            } catch (error) {
                alert('เกิดข้อผิดพลาด: ' + error);
            }
        }

        // Edit media
        function editMedia(mediaId) {
            fetch(`/queue/api/media/all`)
                .then(res => res.json())
                .then(data => {
                    const media = data.media.find(m => m.id === mediaId);
                    if (media) {
                        document.getElementById('edit_media_id').value = media.id;
                        document.getElementById('edit_title').value = media.title;
                        document.getElementById('edit_description').value = media.description || '';
                        document.getElementById('edit_duration').value = media.duration;
                        document.getElementById('edit_display_order').value = media.display_order;
                        document.getElementById('edit_is_active').checked = media.is_active;
                        new bootstrap.Modal(document.getElementById('editModal')).show();
                    }
                });
        }

        // Update media
        document.getElementById('editForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const mediaId = document.getElementById('edit_media_id').value;
            const data = {
                title: document.getElementById('edit_title').value,
                description: document.getElementById('edit_description').value,
                duration: parseInt(document.getElementById('edit_duration').value),
                display_order: parseInt(document.getElementById('edit_display_order').value),
                is_active: document.getElementById('edit_is_active').checked
            };

            try {
                const response = await fetch(`/queue/api/media/${mediaId}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();

                if (result.success) {
                    alert('อัปเดตสำเร็จ!');
                    bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                    loadMediaList();
                } else {
                    alert('เกิดข้อผิดพลาด: ' + result.error);
                }
            } catch (error) {
                alert('เกิดข้อผิดพลาด: ' + error);
            }
        });

        // Delete media
        async function deleteMedia(mediaId) {
            if (!confirm('ต้องการลบสื่อนี้หรือไม่?')) return;

            try {
                const response = await fetch(`/queue/api/media/${mediaId}`, {
                    method: 'DELETE'
                });
                const result = await response.json();

                if (result.success) {
                    alert('ลบสำเร็จ!');
                    loadMediaList();
                } else {
                    alert('เกิดข้อผิดพลาด: ' + result.error);
                }
            } catch (error) {
                alert('เกิดข้อผิดพลาด: ' + error);
            }
        }

        // Initial load
        loadMediaList();
    </script>
</body>

</html>